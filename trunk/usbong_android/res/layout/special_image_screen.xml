	>		 	
	<LinearLayout style="@style/UsbongSpecialImageMainLayout">
		android:gravity="center_vertical|center_horizontal">   	
		<ImageView android:id="@+id/special_imageview"
		    style="@style/UsbongDefaultImageView"	    	
		    android:layout_alignParentBottom="true"	 
		/>
	</LinearLayout>
	</ScrollView>	    	    
	<LinearLayout
		style="@style/UsbongDefaultBackNextButtonLayout">	
	    <Button android:id="@+id/back_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Back"/>
		    
	   	<Button android:id="@+id/next_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Next"/>	    
	</LinearLayout>
